{% extends "base.html.twig" %}

{% block body %}
<body>

  <!-- Page Header -->
  <div id="overlay">
    <header id="mastList" style="height:400px">
      <div class="container">
        <div class="row" style="height: 200px;"></div>
        <div class="row text-center">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1 class="text-uppercase font-weight-bold">Les posts les plus récents</h1>
              <span class="subheading">Géomatique et développement, le blog qu'il vous faut</span>
            </div>
          </div>
        </div>
      </div>
    </header>
  </div>
  <!-- Main Content -->
  <div class="container">
    {% if session.get('role') == 'administrator' %}
    <div class="row" style="margin:75px">
        <div class="col-12 mx-auto text-center">
            {%  if session.get(key) %}
                <div class="alert alert-{{status}} alert-dismissible fade show" role="alert">
                    {% if status == "danger" %}
                        <strong>Echec : </strong>
                    {% else %}
                        <strong>Succès : </strong>
                    {% endif %}
                  {{ session.show(key) }}
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
            {% endif %}
            <h2 style="margin-bottom:50px">Les posts les plus lus</h2>
            <a class="btn btn-primary btn-xl js-scroll-trigger" href="index.php?action=addPost">Ajouter un post</a>
        </div>
    </div>
    {% endif %}
    <div class="row" style="margin:75px">
      <div class="col-lg-8 col-md-10 mx-auto">
        {% for post in posts %}
            {% if post %}
                <div class="post-preview">
                    <a href="index.php?action=post&id={{ post.id }}">
                        <h2 class="post-title">{{ post.title }}</h2>
                        <h3 class="post-subtitle">{{ post.chapo }}</h3>
                    </a>
                    <p class="post-meta">Posté par {{ post.user }} - {{ post.date }}</p>
                </div>
                <hr>
            {% endif %} 
        {% endfor %}
        <!-- Pager -->
{#        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>#}
      </div>
    </div>
  </div>
</body>
{% endblock %}
