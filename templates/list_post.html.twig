{% extends "base.html.twig" %}

{% block body %}
<body>

  <!-- Page Header -->
  <header id="mastList" class="masthead" style="background-image: url('public/img/home-bg.jpg'); height:200px;">
    <div class="overlay" style="background-color:rgba(240, 225, 224, 0.6)"></div>
    <div class="container">
      <div class="row" style="height: 200px;"></div>
      <div class="row text-center">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Les posts les plus récents</h1>
            <span class="subheading">Géomatique et développement, le blog qu'il vous faut</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row" style="margin:75px">
      <div class="col-lg-8 col-md-10 mx-auto">
        {% for post in posts %}
            {% if post %}
                <div class="post-preview">
                    <a href="index.php?action=post&id={{ post.id }}">
                        <h2 class="post-title">{{ post.title }}</h2>
                        <h3 class="post-subtitle">{{ post.chapo }}</h3>
                    </a>
                    <p class="post-meta">Posted by {{ post.pseudo }} - {{ post.date }}</p>
                </div>
                <hr>
            {% endif %} 
        {% endfor %}
        <!-- Pager -->
{#        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>#}
      </div>
    </div>
  </div>
</body>
{% endblock %}
